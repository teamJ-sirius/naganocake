<div class="container">
    <h2 class="admin_order_detail">Order Detail</h2>
    <div class="row">
    <div class="col-8">
    <table class="table">
      <tr>
        <th>購入者</th>
        <td><%= @order.customer.first_name + @order.customer.last_name %></td>
      </tr>
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td><%= @order.address %></td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td><%= @order.payment_method %></td>
      </tr>
      <tr>
        <th>注文ステータス</th>
        <td>
          <%= form_for (@order), url:admin_order_path(@order), method: :patch, local: true do |f| %>
            <%= f.select :order_status,Order.order_statuses.keys, class: "order_status" %>
            <%= f.submit "Update", class: "btn btn-outline-dark" %>
          <% end %>
        </td>
      </tr>
    </tabls>
    <table class="table table-bordered col-xs-10">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
        </tr>
      </thead>
      <tbody>
      <% @order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.item_name %></td>
          <td>￥<%= order_detail.order_price %></td>
          <td><%= order_detail.quantity %></td>
          <td>￥<%= order_detail.item.price * order_detail.quantity %></td>
          <td>
            <%= form_with model: order_detail, url: admin_order_detail_path(order_detail), method: :patch, local: true do |f| %>
              <%= f.hidden_field :order_detail_id, :value => order_detail.id %>
              <%= f.select :making_status, OrderDetail.making_statuses.keys, class: "making_status" %>
              <%= f.submit "Update", class: "btn btn-outline-dark" %>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    </div>
    <div class="col-4">
      <table class="table">
        <tr>
          <th>商品合計</th>
          <td><%= @order.total_price %>円</td>
        </tr>
        <% postage = 800 %>
        <tr>
          <th>送料</th>
          <td><%= "#{postage}円" %></td>
        </tr>
        <tr>
          <th>請求金額合計</th>
          <td><%= "#{postage + @order.total_price}" %>円</td>
        </tr>
      </table>
    </div>
  </div>
</div>