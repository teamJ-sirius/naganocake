<div>
  <h3>会員詳細</h3>
  <table>
	<tbody>
		<tr>
			<th>会員ID</th>
			<td><%= @customer.id %></td>
		</tr>
		<tr>
			<th>ふりがな</th>
			<td><%= "#{@customer.first_name_kana}"+"#{@customer.last_name_kana}" %></td>
		</tr>
		<tr>
			<th>氏名</th>
			<td><%= "#{@customer.first_name}"+"#{@customer.last_name}" %></td>
		</tr>
		<tr>
			<th>郵便番号</th>
			<td>〒<%= @customer.postcode %></td>
		</tr>
		<tr>
			<th>住所</th>
			<td><%= @customer.addresse %></td>
		</tr>
		<tr>
			<td>電話番号</td>
			<td><%= @customer.phone_number %></td>
		</tr>
		<tr>
			<th>メールアドレス</th>
			<td><%= @customer.email %></td>
		</tr>
		<tr>
			<th>ステータス</th>
			<td><% if @customer.is_deleted == true %>
                  <%= "有効" %>
                 <% else %>
                  <%= "退会" %>
                 <% end %></td>
      <td><%= link_to "会員情報編集", edit_admin_customer_path(@customer) %> </td>
		</tr>
	</tbody>
</table>
<%= link_to "会員情報一覧ページ", admin_customers_path %>
