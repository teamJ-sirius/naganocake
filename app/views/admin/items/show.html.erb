<div class="container">
  <div class="row">
    <div class="col">
      <h2>商品詳細</h2>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <br>
         <% if @item.image.attached? %>
       <td><%= image_tag @item.image, size: "300x300" %></td>
         <% else %>
            <%= image_tag 'no_image.jpg' %>
         <% end %>
    </div>
    <div class="col">
      <dl class="dl">
        <dt>商品名</dt>
          <dd><%= @item.item_name %></dd><br>
        <dt>商品の説明</dt>
          <dd> <%= @item.item_description %></dd><br>
        <dt>税込価格</dt>
          <dd>¥<%= (@item.price*1.1).floor %></dd><br>
        <dt>販売ステータス</dt>
          <dd><% if @item.sales_status == false %>
                <p>販売中</p>
                <% else %>
                <p>売り切れ</p>
              <% end %>
          </dd>
        <dt>
          <dd><%= link_to '編集', edit_admin_item_path(@item.id), class: "btn btn-primary" %></dd>
        </dt>
      </dl>
    </div>
  </div>
</div>