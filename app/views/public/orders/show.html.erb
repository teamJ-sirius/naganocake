<div class="container">
  <h1>Order Detail</h1>

  <div class="row">
    <div class="col">

      <p>ご注文日：<%= @order_detail.created_at.strftime('%Y-%m-%d %H:%M') %></p>
      <table class="table">
        <thead class="order-detail-head">
          <tr>
            <th>商品名</th>
            <th>価格</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% total = 0 %>
          <% @order_detail.order.order_details.each do |order_detail| %>
            <% subtotal = order_detail.order_price * order_detail.quantity %>
            <% total += subtotal %>
            <tr>
              <td><%= order_detail.item.item_name %></td>
              <td>¥<%= order_detail.order_price %></td>
              <td><%= order_detail.quantity %></td>
              <td>¥<%= subtotal %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <p class="text-right">注文ステータス：<%= @order_detail.order.order_status %></p>

      <p>配送先：<%= @order_detail.order.address %></p>
      <p>支払方法：<%= @order_detail.order.payment_method %></p>

      <div class="col-6" style="margin-top: 50px;">
        <p>請求情報</p>
        <table class="table table-bordered">
          <tbody>
            <tr>
              <th>商品合計</th>
              <td>¥<%= total %></td>
            </tr>
            <tr>
              <th>配送料</th>
              <td>¥<%= @order_detail.order.postage %></td>
            </tr>
            <tr>
              <th>ご請求額</th>
              <% total_with_postage = total + @order_detail.order.postage %>
              <td>¥<%= total_with_postage %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>