<div>
  <h3>注文情報</h3>

    <table>
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      
    </table>
    <table>
    	<tbody>
      		<tr>
      			<th>送料</th>
      			<th>小計</th>
      			<th>ご請求金額</th>
      		</tr>
      		<tr>
      			<td></td>
      			<td></td>
      			<td></td>
      		</tr>
      	</tbody>
      </table>
      <table>
      	<tbody>
      		<tr>
      			<th>支払方法</th>
      			<td><%= @order.payment_method %></td>
      		</tr>
      		<tr>
      			<th>届け先</th>
      			<td>〒<%= @order.post_code %></td>
      			<td><%= @order.address %></td>
      			<td><%= @order.name %></td>
      		</tr>
      	</tbody>
      </table>

      <%= form_with model: @order, url: orders_path, method: :post do |f| %>
        <%= f.hidden_field :customer_id, value: current_customer.id %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :post_code %>
        <%= f.hidden_field :address %>
        <%= f.submit "注文を確定する" %>
      <% end %>
</div>