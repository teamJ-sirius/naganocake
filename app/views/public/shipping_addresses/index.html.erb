<% if @shipping_address.errors.any? %>
  <ul>
    <% @shipping_address.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<%end%>
<div class="shipping_addres">
  <div class="addresses_new">
    <h3>配送先登録</h3>
    <%= form_with model: @shipping_address, url: shipping_addresses_path, method: :post do |f|%>
    <h5>郵便番号</h5>
    <%= f.text_field :post_code %>
    <h5>住所</h5>
    <%= f.text_field :address %>
    <h5>氏名</h5>
    <%= f.text_field :address_name %>

    <div>
      <%=f.submit "新規登録"%>
    </div>
    <% end %>
  </div>
  <div class="addresses_index">

    <h3>配送先一覧</h3>
      <% @shipping_addresses.each do |shipping_address| %>
        <table>
          <thead>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
          </thead>
          <tbody>
            <td>〒<%= shipping_address.post_code %></td>
            <td><%= shipping_address.address %></td>
            <td><%= shipping_address.address_name %></td>
          </tbody>
        </table>
        <%= link_to "編集する", edit_shipping_address_path(shipping_address) %>
        <%= link_to "削除する", shipping_address_path(shipping_address), method: :delete %>
      <%end%>
  </div>

</div>