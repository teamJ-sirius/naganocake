<div class="edit_customer">
  <h3>会員情報編集画面</h3>
  
  <%= form_with model: @customer,method: :patch do |f|%>
    <h4>ふりがな</h4>
      <%= f.text_field :first_name_kana %>
      <%= f.text_field :last_name_kana %>
      
    <h4>氏名</h4>
      <%= f.text_field :first_name %>
      <%= f.text_field :last_name %>
      
    <h4>郵便番号</h4>
      <%= f.text_field :postcode %>
      
    <h4>住所</h4>
      <%= f.text_field :addresse %>
      
    <h4>電話番号</h4>
      <%= f.text_field :phone_number %>
      
    <h4>メールアドレス</h4>
      <%= f.email_field :email %>
      
    <div>
      <%= f.submit "変更内容を保存する" %>
      <%= link_to "退会する", unsubscribe_customer_path %>
    </div>
   
  <% end %>
</div>